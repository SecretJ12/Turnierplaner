{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:vue/vue3-recommended",
		"prettier"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"parser": "@typescript-eslint/parser",
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint", "vue"],
	"ignorePatterns": ["dist/**", "node/**", "node_modules/**"],
	"rules": {
		"indent": "off",
		"vue/no-mutating-props": [
			"error",
			{
				"shallowOnly": true
			}
		]
	}
}
